@model List<Treat>

<h2>Treats</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var treat in Model)
        {
            <tr>
                <td>@treat.Id</td>
                <td>@treat.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@treat.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@treat.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@treat.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create">Create New</a>
